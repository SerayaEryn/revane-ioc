{
  "compilerOptions": {
    "outDir": "./bin/",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "commonjs",
    "removeComments": true,
    "target": "ES2017",
    "importHelpers": true,
    "alwaysStrict": true,
    "lib": [
      "es2016",
      "es2017"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "testdata/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}