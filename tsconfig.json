{
  "compilerOptions": {
    "outDir": "./bin/",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "commonjs",
    "removeComments": true,
    "target": "ES2020",
    "importHelpers": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "lib": [
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "testdata/**/*",
    "testdata/componentScan1/node_modules/**/*",
    "testdata/componentScan1/node_modules/**/*.json",
    "testdata/componentScan2/node_modules/**/*",
    "testdata/componentScan2/node_modules/**/*.json",
    "testdata/componentScan3/node_modules/**/*",
    "testdata/componentScan3/node_modules/**/*.json",
    "testdata/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}